package  {		import flash.display.MovieClip;	import flash.events.Event;	import flash.events.MouseEvent;			public class CBola extends MovieClip {				var deltax = Math.random() * 10 - 5;		var deltay = Math.random() * 10 - 5;				public function CBola() {			this.addEventListener(Event.ENTER_FRAME,mexeCBola);			this.addEventListener(MouseEvent.CLICK,mataCBola);		}				private function mataCBola(e:MouseEvent) {			this.parent.removeChild(this);			this.removeEventListener(Event.ENTER_FRAME,mexeCBola);			this.removeEventListener(MouseEvent.CLICK,mataCBola);		}				private function mexeCBola(e:Event) {			x += deltax;			y += deltay;						if (x < 0) {				deltax *= -1;				x = 0;			}			if (x > stage.stageWidth) {				deltax *= -1;				x = stage.stageWidth;			}			if (y < 0) {				deltay *= -1;				y = 0;			}			if (y > stage.stageHeight) {				deltay *= -1;				y = stage.stageHeight;			}					}	}	}