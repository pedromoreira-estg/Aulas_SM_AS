package  {		import flash.display.MovieClip;	import flash.events.Event;	//import flash.events.*;	import flash.utils.getTimer;	public class CEx0 extends MovieClip {				var ti;		var tf;		var nbolas = 20;		var contamortas = 0;		public function CEx0() {			// constructor code						addEventListener("BOLAMORTA",onmata);			stage.frameRate = 30;			for (var i=0; i < nbolas; i++) {				var b = new CBola();				b.x = stage.stageWidth/2;				b.y = stage.stageHeight/2;				addChild(b);			}			ti = getTimer();		}		private function onmata(e:Event) {			trace("bola morreu");			contamortas++;			if (contamortas == nbolas) {				trace("jogo terminado");				gameover();			}		}		private function gameover() {			removeEventListener("BOLAMORTA",onmata);			tf = getTimer();			trace("pontuacao :",tf-ti);		}	}	}