package  {		import flash.display.MovieClip;	import flash.events.Event;	//import flash.events.*;	import PixelPerfectCollisionDetection;		public class CEx1 extends MovieClip {				var nbolas = 100;		var contamortas = 0;		var asbolas : Array = new Array();		public function CEx1() {			// constructor code						addEventListener("BOLAMORTA",onmata);			addEventListener(Event.ENTER_FRAME,update);			stage.frameRate = 30;			for (var i=0; i < nbolas; i++) {				var b = new CBola1();				b.x = stage.stageWidth/2;				b.y = stage.stageHeight/2;				addChild(b);				var collide = false;				do {					collide = false;					b.x = Math.random() * stage.stageWidth;					b.y = Math.random() * stage.stageHeight;						for (var bi = 0; bi<asbolas.length; bi++) {							if (PixelPerfectCollisionDetection.isColliding(b,asbolas[bi],this)) {								collide=true;								break;							}						}					} while (collide);				asbolas.push(b);			}		}		private function onmata(e:Event) {			trace("bola morreu");			contamortas++;			if (contamortas == nbolas) {				trace("jogo terminado");				gameover();			}		}		private function gameover() {			removeEventListener("BOLAMORTA",onmata);			}					private function update(e:Event) {			for(var i=0; i < asbolas.length; i++) {				asbolas[i].mexeCBola();			}		}	}	}